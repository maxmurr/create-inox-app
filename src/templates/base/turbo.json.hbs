{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "lint:fix": {},
    "format": {},
    "format:fix": {},
    "check-types": {
      "dependsOn": ["^build"]
    },
    "setup": {
      "cache": false
    },
    "db:generate": {},
    "db:migrate": {},
    "db:push": {},
    "db:studio": {
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": [
    "DATABASE_URL",
    "REDIS_URL",
    "NODE_ENV"
  ]
}
