{
  "name": "{{projectName}}",
  "private": true,
  "packageManager": "bun@1.3.5",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "check": "turbo run lint format check-types",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "format:fix": "turbo run format:fix",
    "check-types": "turbo run check-types",
    "db:generate": "turbo run db:generate",
    "db:migrate": "turbo run db:migrate",
    "db:push": "turbo run db:push",
    "db:studio": "turbo run db:studio",
{{#if hasDatabase}}
    "setup": "turbo run setup",
{{/if}}
    "docker:dev": "docker compose --profile dev up",
    "docker:dev:down": "docker compose --profile dev down",
    "docker:prod": "docker compose --profile prod up --build"
  },
  "devDependencies": {
    "turbo": "^2"{{#if hasLefthook}},
    "lefthook": "^2.1.1"{{/if}}{{#if hasCommitlint}},
    "@commitlint/cli": "^19",
    "@commitlint/config-conventional": "^19"{{/if}}
  }
}
