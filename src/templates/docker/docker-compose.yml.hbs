services:
  web-dev:
    image: oven/bun:1.3.5-alpine
    profiles: [dev]
    working_dir: /app
    volumes:
      - .:/app
      - web_node_modules:/app/node_modules
    command: sh -c "bun install --ignore-scripts && bunx turbo run dev --filter=@repo/web"
    ports:
      - "3000:3000"
    environment:
      - WATCHPACK_POLLING=true

  web:
    profiles: [prod]
    build:
      context: .
      dockerfile: Dockerfile
      target: runner
      args:
        APP_NAME: web
        APP_PACKAGE: "@repo/web"
    ports:
      - "3000:3000"
    environment:
      - NODE_ENV=production

{{#if isParadedb}}
  postgres:
    profiles: [dev, prod]
    image: paradedb/paradedb:latest
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: changeme
      POSTGRES_DB: {{appName}}
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data
{{/if}}

{{#if hasRedis}}
  redis:
    profiles: [dev, prod]
    image: redis:7-alpine
    ports:
      - "6379:6379"
{{/if}}

volumes:
  web_node_modules:
{{#if isParadedb}}
  postgres_data:
{{/if}}
